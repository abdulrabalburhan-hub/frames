# AlBurhan Frames - Apache Configuration
# IMPORTANT: This .htaccess works regardless of installation directory (/, /frames/, /photo-app/, etc.)
# No configuration needed - paths are automatically detected

# Enable Rewrite Engine
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Auto-detect base path - no manual configuration needed
    # Uncomment the line below ONLY if you have issues with subdirectory installs
    # RewriteBase /
    
    # Allow existing files and directories
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]
    
    # Handle shortened URLs (e.g., /seeratframe72)
    # Route through redirect.php for smart routing
    # Exclude core application paths (admin panel, assets, etc.)
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} !/(admin|assets|uploads|tests|migrations|docs)/
    RewriteCond %{REQUEST_URI} !\.(php|css|js|jpg|jpeg|png|gif|ico)$
    RewriteRule ^([a-zA-Z0-9_-]+)/?$ redirect.php?path=$1 [L,QSA]
</IfModule>

# Security Headers
<IfModule mod_headers.c>
    # Prevent clickjacking
    Header always set X-Frame-Options "SAMEORIGIN"
    
    # XSS Protection
    Header always set X-XSS-Protection "1; mode=block"
    
    # Prevent MIME sniffing
    Header always set X-Content-Type-Options "nosniff"
    
    # Referrer Policy
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# PHP Settings (PHP 8.x compatible)
<IfModule mod_php.c>
    php_value upload_max_filesize 15M
    php_value post_max_size 16M
    php_value max_execution_time 300
    php_value max_input_time 300
</IfModule>

# Protect sensitive files (Apache 2.4 syntax)
# NOTE: setup.php is NOT blocked - delete it manually after setup
<FilesMatch "^(config\.php|database\.sql|cleanup_log\.txt|.*\.md)$">
    Require all denied
</FilesMatch>

# Prevent directory listing
Options -Indexes

# Custom error pages (relative paths work from any installation directory)
ErrorDocument 404 404.php
ErrorDocument 403 403.php

# Compress text files for faster loading
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Cache static resources
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType text/css "access plus 1 week"
    ExpiresByType application/javascript "access plus 1 week"
</IfModule>

# Protect uploads directory from PHP execution
<IfModule mod_rewrite.c>
    RewriteCond %{REQUEST_URI} ^.*/uploads/.*\.php$
    RewriteRule .* - [F,L]
</IfModule>
